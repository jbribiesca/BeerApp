<div class="container">
    <div class="row">
        <div class="col-8 offset-2">

            <!-- Sign-in card content form (Bootstrap-> Components-> Form-> Auto-sizing)-->
            <div class="card card-body">
                <h1 class="logo2"><i class="fas fa-beer"></i> Log In</h1>
                <br>
                <!-- Sign in form -->

                <form id="signin" name="signin" method="post" action="signin" class="needs-validation" novalidate>
                    <div class="form-row align-items-center">
                        <div class="col-auto">
                            <label class="sr-only" for="email"></label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-envelope"></i></div>
                                </div>
                                <input type="text" class="form-control" name="email" id="email" placeholder="Email"
                                    value="" required>
                                <div class="invalid-feedback">Please provide Email</div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <label class="sr-only" for="password"></label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-key"></i></div>
                                </div>
                                <input type="password" name="password" class="form-control" id="password"
                                    placeholder="Password" value="" required>
                                <div class="invalid-feedback">Please provide Password</div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-outline-dark mb-2">Sign In</button>
                        </div>
                    </div>
                </form>
                <div> {{messages}}</div>
            </div>
        </div>
    </div>
</div>

